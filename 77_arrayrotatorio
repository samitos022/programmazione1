#include<iostream>
#include<fstream>
using namespace std;

int const lenght = 256;

int main(int argc, char * argv[]){

  if(argc != 3){
    cerr << "Usage: ./a.exe <parola> <numero>"<<endl;
    exit(1);
  }

  int numero = atoi(argv[2]);

  int dim;

  for(int i = 0; argv[1][i] != '\0'; i++){
    dim = i + 1;
  }

  char * array = new char[dim + 1];
  array[dim] = '\0';

  cout << "Dim: " << dim << endl;

  for(int i = 0; i < numero; i++){
    array[i + (dim - numero)] = argv[1][i];
  }

  for(int i = 0; i < (dim - numero); i++){
    array[i] = argv[1][numero + i];
  }
  
  for(int i = 0; array[i] != '\0'; i++){
    cout << array[i];
  }

  return 0;
  
}
